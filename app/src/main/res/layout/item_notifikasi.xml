<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvItemListTransaksi"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:orientation="vertical"
    app:cardElevation="0dp"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">
        <ImageView
            android:id="@+id/iv_transaksi"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/ic_adobe"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="18dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_transaksi"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">
            <TextView
                android:id="@+id/title_transaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verifikasi Pembayaran"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/ket_transaksi"
                android:layout_below="@id/title_transaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bukti pembayaran sudah diverifikasi oleh kami, terima kasih telah melakukan booking."
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginTop="8dp"
                android:layout_marginRight="80dp"/>

            <ImageView
                android:id="@+id/transaksi_badge"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@drawable/bg_badge"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/date_transaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25 Juni"
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="invisible"/>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/separator"
            android:layout_below="@id/iv_transaksi"
            android:layout_marginLeft="86dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>