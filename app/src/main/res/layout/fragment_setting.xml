<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_setting"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@android:color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="16dp">

            <ImageButton
                android:id="@+id/ib_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_arrow_left"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Configuration"
                android:layout_centerInParent="true"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"
                android:fontFamily="@font/sf_pro_display_medium"/>

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_setting"
        android:layout_marginTop="32dp"
        android:padding="16dp">

        <RelativeLayout
            android:id="@+id/layout_notf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white"
            android:elevation="10dp"
            android:padding="16dp">

            <ImageView
                android:id="@+id/iv_notif_setting"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_notifications"
                android:backgroundTint="@color/colorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification"
                android:layout_centerInParent="true"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:fontFamily="@font/sf_pro_display_medium"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_notif_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textOn="ON"
                android:textOff="OFF"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_night"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:layout_below="@id/layout_notf"
            android:background="@drawable/bg_white"
            android:elevation="10dp">

            <ImageView
                android:id="@+id/iv_night_setting"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_moon"
                android:backgroundTint="@color/colorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Night Mode"
                android:layout_centerInParent="true"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:fontFamily="@font/sf_pro_display_medium"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_night_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textOn="ON"
                android:textOff="OFF"/>

        </RelativeLayout>

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Out"
            android:background="@drawable/bg_btn_solid_primary"
            android:layout_below="@id/layout_night"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/sf_pro_display_semibold"
            android:layout_marginTop="32dp"/>

    </RelativeLayout>

</RelativeLayout>