<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/dog"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_solid_primary"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:layout_below="@id/iv_logo">

            <TextView
                android:id="@+id/register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textSize="20sp"
                android:fontFamily="@font/sf_pro_display_medium"
                android:textColor="@android:color/white"
                android:layout_centerHorizontal="true"/>

            <LinearLayout
                android:id="@+id/nama_lengkap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/register"
                android:layout_marginTop="16dp"
                android:weightSum="10">

                <EditText
                    android:id="@+id/et_first_name_daftar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:padding="10dp"
                    android:hint="First Name"
                    android:inputType="text"
                    android:textColor="@color/colorInputText"
                    android:textSize="14sp"
                    android:background="@drawable/bg_edittext"
                    android:layout_marginRight="8dp"
                    android:backgroundTint="@android:color/white"/>

                <EditText
                    android:id="@+id/et_last_name_daftar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:padding="10dp"
                    android:hint="Last Name"
                    android:inputType="text"
                    android:textColor="@color/colorInputText"
                    android:textSize="14sp"
                    android:background="@drawable/bg_edittext"
                    android:backgroundTint="@android:color/white"/>

            </LinearLayout>

            <EditText
                android:id="@+id/et_username_daftar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:hint="Username"
                android:layout_marginTop="8dp"
                android:inputType="text"
                android:textColor="@color/colorInputText"
                android:textSize="14sp"
                android:background="@drawable/bg_edittext"
                android:backgroundTint="@android:color/white"
                android:layout_below="@id/nama_lengkap"/>

            <EditText
                android:id="@+id/et_email_daftar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:hint="Email"
                android:layout_marginTop="8dp"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorInputText"
                android:textSize="14sp"
                android:background="@drawable/bg_edittext"
                android:backgroundTint="@android:color/white"
                android:layout_below="@id/et_username_daftar"/>

            <EditText
                android:id="@+id/et_phonenumber_daftar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:hint="Phone Number"
                android:layout_marginTop="8dp"
                android:inputType="phone"
                android:textColor="@color/colorInputText"
                android:textSize="14sp"
                android:background="@drawable/bg_edittext"
                android:backgroundTint="@android:color/white"
                android:layout_below="@id/et_email_daftar"/>

            <EditText
                android:id="@+id/et_password_daftar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:hint="Set Password"
                android:layout_marginTop="8dp"
                android:inputType="textPassword"
                android:textColor="@color/colorInputText"
                android:textSize="14sp"
                android:background="@drawable/bg_edittext"
                android:backgroundTint="@android:color/white"
                android:layout_below="@id/et_phonenumber_daftar"/>

            <TextView
                android:id="@+id/agree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="With clicking Sign Up you will agree to our policies, terms, and conditions"
                android:layout_below="@id/et_password_daftar"
                android:textColor="@android:color/white"
                android:fontFamily="@font/sf_pro_display_light"
                android:layout_marginTop="32dp"/>
            <Button
                android:id="@+id/btn_signup"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/agree"
                android:text="Sign up"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/bg_btn_solid_white"
                android:padding="10dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/btn_signup">

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="already have an account?"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:id="@+id/tv_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SIGN IN"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/tv2"
                    android:layout_marginStart="4dp"/>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>